<section class="team">  

    <div class="team-1 team-fit">

        {%- if pti.profilepti -%}

            {%- for item in pti.profilepti -%}

                <div class="grid-element-team module" >                
                    <img class="featuredImage" src="{{ item.featuredImage }}" alt="{{ featuredImage }}"></img>
                    <h2>{{ item.title }}</h2>
                    <img class="flag" src="{{ item.flag }}" alt="{{ flag }}"></img> 
                    <a href="{{ item.linkyoutube }}" target="_blank" rel="noreferrer noopener" aria-label="youtube"><img class="youtubeIcon" src="{{ item.youtubelogo }}" alt="SN&PT Player"></img></a> 
                </div>               

            {%- endfor -%}

        {%- endif -%}

    </div>      

</section>

