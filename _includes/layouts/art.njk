---
layout: layouts/base.njk
title: art
---

{% set css %}
{% include "styles/post.css" %}
{% endset %}

<style>
    {{css | cssmin | safe}}
</style>

<main class="post-container">

    <section class="post-main-content">

        <img class="preview-image" src="{{ featuredImage | url }}" alt="{{ featuredImage }}"></img>

        <h1 class="post-title">{{ title }}</h1>

        <section class="post-info">

            <span>
                {% include "partials/author.njk" %}
            </span>

            <section class="post-flex-date">

                <span class="post-date">
                    <p>{{ date | readableDate }}</p>                   
                </span>

                <span class="post-read-time">
                    <p class="words">{{ content | wordcount | readtime }}</p>
                </span>

            </section>

        </section>

        <span class="content-mobile">{{ content | safe }}</span>

        {% include "partials/facebook.njk" %}

        {# PAGINATION #}
        <section class="post-pagination">

            <span class="post-pagination-next">
                {% set nextPost = collections.art | getNextCollectionItem(page) %}
                {% if nextPost %}
                    <a href="{{ nextPost.url }}">⇦ Previous</a>
                {% endif %}
            </span>

            <span class="post-pagination-previous">
                {% set previousPost = collections.art | getPreviousCollectionItem(page) %}
                {% if previousPost %}
                    <a href="{{ previousPost.url }}">Next ⇨</a>
                {% endif %}
            </span>

        </section>
    </section>

    {% include "partials/backtotop.njk" %}

    {# PAGINATION SIDEBAR #}
    <sidebar class="post-sidebar">

        <span class="post-sidebar-next">
            {% set previousPost = collections.art | getPreviousCollectionItem(page) %}
            {% if previousPost %}
                <a href="{{ previousPost.url }}">Next ⇨</a>
            {% endif %}
        </span>

        <span class="post-sidebar-previous">
            {% set nextPost = collections.art | getNextCollectionItem(page) %}
            {% if nextPost %}
                <a href="{{ nextPost.url }}">⇦ Previous</a>
            {% endif %}
        </span>      

    </sidebar>

</main>